nav.navbar
	a.navbar__logo(href="#")
		img.w-10(class='xl:w-9' src="assets/svg/favicon.svg" alt="Icono de la pagina")
		span Travel Page
	label.navbar__search(for="search__navbar")
		span
			img.w-5(src="assets/svg/search.svg" alt="Icono de Busqueda")
		input#search__navbar(type='search' placeholder='San Francisco')
	.navbar__menu
		a(href="#recommended") Locations
		a(href="#trending-stays") Stays
		a(href="#FAQs") FAQs
		a(href="#about-us") About Us
	figure.navbar__menu--user.night-mode
		img.hidden.w-5.cursor-pointer(class='lg:block' src="assets/svg/search.svg" alt="Icono de Busqueda")
		img#toggle.cursor-pointer(class='md:w-5' src="assets/svg/moon.svg" alt="Icono de modo nocturno")
		img.hidden.w-5(class='md:block' src="assets/svg/user.svg" alt="Icono de usuario")
